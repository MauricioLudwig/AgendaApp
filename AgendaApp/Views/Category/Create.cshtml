@model CreateCategoryVM

@{
    ViewBag.Title = "Create Category";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">

            <div class="card">

                <div class="card-header text-center">
                    Add Category
                </div>

                <div class="card-body">

                    <form asp-controller="Category" asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <span asp-validation-for="Title" class="invalidFormSubmission"></span>
                            <input asp-for="Title" class="form-control" />
                            <small class="form-text text-muted">Max 50 characters allowed.</small>
                        </div>

                        <input type="submit" class="btn btn-success" value="Add" />

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>