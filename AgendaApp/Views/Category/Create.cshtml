@model CreateCategoryVM

@{
    ViewBag.Title = "Create Category";
}

<div class="card">
    <div class="card-header text-center">
        Add Category
    </div>
    <div class="card-body">
        <p class="card-text">Add a new category with the form below to get started. Categories enable you to group your agenda items later on. You can edit or remove categories you add.</p>

        <form asp-controller="Category" asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly" class="invalidModel"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="invalidFormSubmission"></span>
                <input asp-for="Title" class="form-control" />
                <small class="form-text text-muted">Max 50 characters allowed.</small>
            </div>

            <input type="submit" class="btn btn-success" value="Add" />

        </form>

    </div>
</div>