@{
    ViewBag.Title = "Agenda";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">

            <div class="row">

                <div class="col-lg-6">
                    <p class="lead">Your Agendas</p>
                    <div id="agenda-container"></div>
                    <hr />
                </div>

                <div class="col-lg-6">
                    <p class="lead">Create Agenda</p>
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="titleInput">Title</label>
                                <input type="text" class="form-control" id="titleInput">
                                <small class="form-text text-muted">This field is optional. Max 100 characters</small>
                            </div>
                            <div class="form-group">
                                <label for="dateInput">Deadline</label>
                                <input type="date" class="form-control" id="dateInput">
                                <small class="form-text text-muted">This field is optional</small>
                            </div>
                            <button id="addAgendaBtn" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section localScript {
    <script src="~/js/agenda.js"></script>
}